{% extends "layout.html.twig" %}

{% block title %}Accueil{% endblock %}

{% block content %}
    {% if lastItems %}
        {% for items in lastItems %} 
            <div class="row">
                <div class="cadre-header">
                    <div class="page-header">
                        <h2>{{items['type'].label}} <small>Liste des derniers {{items['type'].label}}s</small></h2>
                    </div>
                    <div class="container-fluid">
                        {% for item in items['item'] %}
                        <div class="col-sm-6 col-md-4">
                            <div class="thumbnail-agnam">
                                <a href="/items/{{ item.id }}" ><img src="{{ app.request.basepath }}/images/produit/{{ item.image }}" title="{{ item.name }}"/></a>
                                <div class="caption">
                                    <h3 class="item-tile">{{ item.name }}</h3>
                                    <p>{{ item.description | truncate(60) }}</p>
                                    <div class="row">
                                        <div class="col-sm-5"><a class="btn btn-agnam" href="/items/{{ item.id }}" >Détail</a></div>
                                        <div class="col-sm-5"><a  class="btn btn-warning"href="/panier/additem={{ item.id }}" >{{ item.price }} € <span class="glyphicon glyphicon-shopping-cart"></span></a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}    
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endif %}
{% endblock %}
