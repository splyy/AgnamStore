{% extends 'layout.html.twig' %}
{% set tataMenu = true %}
{% block title %}{{ title }}{% endblock %}
{% block content %}
    <h2 class="text-center">{{ block('title') }}</h2>
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-danger">
            {{ flashMessage }}
        </div>
    {% endfor %}
    {% if form_errors(userForm.password.first) %}
        <div class="alert alert-danger">
            {{ form_errors(userForm.password.first) }}
        </div>
    {% endif %}
    <div class="well">
        {{ form_start(userForm, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="form-group">
            {{ form_label(userForm.firstName, 'Prénom', { 'label_attr': {
        'class': 'col-sm-5 control-label'
            }}) }}
            <div class="col-sm-4">
                {{ form_errors(userForm.firstName) }}
                {{ form_widget(userForm.firstName, { 'attr': {
            'class': 'form-control'
                }}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(userForm.lastName, 'Nom', { 'label_attr': {
        'class': 'col-sm-5 control-label'
            }}) }}
            <div class="col-sm-4">
                {{ form_errors(userForm.lastName) }}
                {{ form_widget(userForm.lastName, { 'attr': {
            'class': 'form-control'
                }}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(userForm.email, 'Email', { 'label_attr': {
        'class': 'col-sm-5 control-label'
            }}) }}
            <div class="col-sm-4">
                {{ form_errors(userForm.email) }}
                {{ form_widget(userForm.email, { 'attr': {
            'class': 'form-control'
                }}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(userForm.password.first, 'Mot de passe', { 'label_attr': {
        'class': 'col-sm-5 control-label'
            }}) }}
            <div class="col-sm-4">
                {{ form_widget(userForm.password.first, { 'attr': {
            'class': 'form-control'
                }}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(userForm.password.second, 'Confirmer mot de passe', { 'label_attr': {
        'class': 'col-sm-5 control-label'
            }}) }}
            <div class="col-sm-4">
                {{ form_widget(userForm.password.second, { 'attr': {
            'class': 'form-control'
                }}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(userForm.address, 'Adresse', { 'label_attr': {
        'class': 'col-sm-5 control-label'
            }}) }}
            <div class="col-sm-4">
                {{ form_errors(userForm.address) }}
                {{ form_widget(userForm.address, { 'attr': {
            'class': 'form-control'
                }}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(userForm.city, 'Ville', { 'label_attr': {
        'class': 'col-sm-5 control-label'
            }}) }}
            <div class="col-sm-4">
                {{ form_errors(userForm.city) }}
                {{ form_widget(userForm.city, { 'attr': {
            'class': 'form-control'
                }}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(userForm.cp, 'Code postal', { 'label_attr': {
        'class': 'col-sm-5 control-label'
            }}) }}
            <div class="col-sm-4">
                {{ form_errors(userForm.cp) }}
                {{ form_widget(userForm.cp, { 'attr': {
            'class': 'form-control'
                }}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(userForm.role, 'Rôle', { 'label_attr': {
                'class': 'col-sm-5 control-label'
            }}) }}
            <div class="col-sm-2">
                {{ form_errors(userForm.role) }}
                {{ form_widget(userForm.role, { 'attr': {
                    'class': 'form-control'
                }}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-5 col-sm-3">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
        </div>
        {{ form_end(userForm) }}
    </div>
{% endblock %}
