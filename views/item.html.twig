{% extends "layout.html.twig" %}

{% block title %}{{ item.name }}{% endblock %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading text-center">
            <h2>{{ item.name }}</h2>
        </div>
        <div class="panel-body"> 
            <div class="container"> 
                <div class="row">
                    <div class="col-md-3">
                        <img class="img-thumbnail" src="{{ app.request.basepath }}/images/produit/livre.png" title="livre"/>
                    </div>
                    <div class="col-md-9">
                        <div class="page-item">
                            <h4>Information Générale</h4>
                                <ul class="list-unstyled">
                                    <li>Auteur : {{ item.author }}</li>
                                    <li>Année : {{ item.year }}</li>
                                    <li>Genre : /</li>
                                </ul>
                            <br />
                            <h4>Description</h4>
                            {{ item.description }}
                        </div>
                    </div>
                </div>
                <div class="row">
                      <br />
                    <a class="btn btn-primary" href="/items/type={{ item.type.id }}" >Retour </a>  
                </div>
            </div>
        </div>
       
    </div>
                   
            
{% endblock %}{# empty Twig template #}
