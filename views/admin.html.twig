{% extends "layout.html.twig" %}
{% set adminMenu = true %}
{% block title %}Administration{% endblock %}
{% block content %}
    <h2 class="text-center">{{ block('title') }}</h2>
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
            <ul class="nav nav-tabs nav-justified">
                <li class="active"><a href="#items" data-toggle="tab">Item</a></li>
                <li><a href="#users" data-toggle="tab">Users</a></li>
            </ul>
        </div>
    </div>
    <div class="tab-content">
        <div class="tab-pane fade in active adminTable" id="items">
            {% if itemsByType %}
                {% for items in itemsByType %} 
                    <div class="row">
                        <div class="cadre-header">
                            <div class="page-header">
                                <h2>{{items['type'].label}}</h2>
                            </div>


                            <div class="table-responsive">
                                <table class="table table-hover table-condensed">
                                    <thead>
                                        <tr>
                                            <th class="col-xs-9">Name</th>
                                            <th class="col-xs-2">Price</th>
                                            <th class="col-xs-1"></th> <!-- Actions column -->
                                        </tr>
                                    </thead>
                                    {% for item in items['item'] %}
                                        <tr>
                                            <td>{{ item.name }}</td>
                                            <td>{{ item.price }}</td>
                                            <td>
                                                <a href="/admin/item/{{ item.id }}/" class="btn btn-info btn-xs" title="Edit"><span class="glyphicon glyphicon-edit"></span></a>
                                                <button type="button" class="btn btn-danger btn-xs" title="Delete" data-toggle="modal" data-target="#itemDialog{{ item.id }}"><span class="glyphicon glyphicon-remove"></span>
                                                </button>
                                                <div class="modal fade" id="itemDialog{{ item.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                                <h4 class="modal-title" id="myModalLabel">Confirmation needed</h4>
                                                            </div>
                                                            <div class="modal-body">
                                                                Do you really want to delete this item ?
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                                <a href="/admin/item/{{ item.id }}/delete" class="btn btn-danger">Confirm</a>
                                                            </div>
                                                        </div><!-- /.modal-content -->
                                                    </div><!-- /.modal-dialog -->
                                                </div><!-- /.modal -->
                                            </td>
                                        </tr>
                                    {% endfor %} 
                                </table>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="alert alert-warning">No items found.</div>
            {% endif %}
            <a href="/admin/item/add"><button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Add item</button></a>

        </div>
        <div class="tab-pane fade adminTable" id="users">
            {% if users %}
                <div class="row">
                    <div class="table-responsive">
                        <table class="table table-hover table-condensed">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Role</th>
                                    <th></th> <!-- Actions column -->
                                </tr>
                            </thead>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.username }}</td>
                                    <td>
                                        {% if user.role == 'ROLE_ADMIN' %}
                                            Admin
                                        {% else %}
                                            User
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="/admin/user/{{ user.id }}/" class="btn btn-info btn-xs" title="Edit"><span class="glyphicon glyphicon-edit"></span></a>
                                        <button type="button" class="btn btn-danger btn-xs" title="Delete" data-toggle="modal" data-target="#userDialog{{ user.id }}"><span class="glyphicon glyphicon-remove"></span>
                                        </button>
                                        <div class="modal fade" id="userDialog{{ user.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                        <h4 class="modal-title" id="myModalLabel">Confirmation needed</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        Do you really want to delete this user ?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                        <a href="/admin/user/{{ user.id }}/delete" class="btn btn-danger">Confirm</a>
                                                    </div>
                                                </div><!-- /.modal-content -->
                                            </div><!-- /.modal-dialog -->
                                        </div><!-- /.modal -->
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                </div>
            {% else %}
                <div class="alert alert-warning">No users found.</div>
            {% endif %}
            <a href="/admin/user/add"><button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Add user</button></a>
        </div>
    </div>
{% endblock %}