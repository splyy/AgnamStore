{% extends "layout.html.twig" %}

{% block title %}Produit{% endblock %}

{% block content %}

<div class="jumbotron">
    <div class="row"><h2>Les produits </h2></div>
    <div class="container">
    {% if items %}
        {% for item in items %}
        <div class="col-sm-4 col-md-3">
            <div class="row text-center ">{{ item.name }}</div>
            <div class="row text-center "><img class="img-thumbnail" src="{{ app.request.basepath }}/images/produit/livre.png" /></div>
        </div>
        {% endfor %}
    {% endif %}
    </div>
</div>
{% endblock %}
