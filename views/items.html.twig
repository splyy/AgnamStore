                {% for item in items %}
                    <div class="col-sm-4 col-md-3 ">
                        <div class="container item-mini ">
                            <div class="row text-center title">{{ item.name }}</div>
                            <div class="row text-center "><div class="col-sm-8 col-sm-offset-2"><img class="img-thumbnail" src="{{ app.request.basepath }}/images/produit/livre.png" title="livre"/></div></div>
                            <div class="row text-center nav-item-mini"><a href="/items/{{ item.id }}" ><div class="col-sm-4 detail">DÃ©tail</div></a><div class="col-sm-3 price">Prix</div><a href="/panier/additem={{ item.id }}" ><div class="col-sm-5 panier">Panier <span class="glyphicon glyphicon-shopping-cart"></span></div></a></div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>

    </div>
{% endblock %}
