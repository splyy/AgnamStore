{% extends "layout.html.twig" %}

{% block title %}Accueil{% endblock %}

{% block content %}
    {% if lastItems %}
        {% for items in lastItems %} 
            <div class="row">
                <div class="cadre-header">
                    <div class="page-header">
                        <h2>{{items['type'].label}} <small>Liste des derniers {{items['type'].label}}</small></h2>
                    </div>
                    <div class="container-fluid">
                        {% for item in items['item'] %}
                        <div class="col-sm-6 col-md-4">
                            <div class="thumbnail">
                                <a href="/items/{{ item.id }}" ><img src="{{ app.request.basepath }}/images/produit/{{ item.image }}" title="{{ item.name }}"/></a>
                                <div class="caption">
                                    <h3>{{ item.name }}</h3>
                                    <p>{{ item.description | truncate(60) }}</p>
                                    <div class="row">
                                        <div class="col-xs-3"><a class="btn btn-agnam" href="/items/{{ item.id }}" >Détail</a></div>
                                        <h4 class="col-xs-4 col-sm-3 col-md-4 text-center"> 19.99{{ item.price }}€</h4>
                                        <div class="col-xs-5"><a  class="btn btn-warning"href="/panier/additem={{ item.id }}" >Panier <span class="glyphicon glyphicon-shopping-cart"></span></a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}    
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endif %}
