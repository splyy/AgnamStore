{% extends "layout.html.twig" %}

{% block title %}Produit{% endblock %}

{% block content %}          
    <div class="row">
        <div class="cadre-header">
            <div class="page-header text-center">
                <h2>Liste des {{ typeG.label }}</h2>
            </div>
            <div class="row">
                {% if items %}
                    {% for item in items %}
                        <div class="col-sm-4 col-md-3">
                            <div class="thumbnail">
                                <img class="item-img" src="{{ app.request.basepath }}/images/produit/{{ item.image }}" title="{{ item.name }}" />
                                <div class="caption">
                                    <h4>{{ item.name }}</h4>
                                    <div class="row">
                                        <div class="col-xs-3"><a class="btn btn-agnam" href="/items/{{ item.id }}" >Détail</a></div>
                                        <h4 class="col-xs-4 col-sm-3 col-md-4 text-center"> 19.99{{ item.price }}€</h4>
                                        <div class="col-xs-5"><a  class="btn btn-warning"href="/panier/additem={{ item.id }}" >Panier <span class="glyphicon glyphicon-shopping-cart"></span></a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %} 
            </div>
        </div>
    </div>
{% endblock %}

